{
  "name": "firmhouse-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/firmhouse-sdk/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/firmhouse-sdk/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "main": "packages/firmhouse-sdk/src/index.ts",
        "outputPath": "dist/packages/firmhouse-sdk",
        "tsConfig": "packages/firmhouse-sdk/tsconfig.lib.json",
        "generateExportsField": true,
        "deleteOutputPath": true,
        "compiler": "tsc",
        "external": ["cross-fetch"],
        "rollupConfig": "packages/firmhouse-sdk/rollup.config.js",
        "project": "packages/firmhouse-sdk/package.json",
        "format": ["esm", "cjs"],
        "additionalEntryPoints": ["packages/firmhouse-sdk/src/utils.ts"],
        "assets": [
          {
            "glob": "packages/firmhouse-sdk/*.md",
            "input": ".",
            "output": "."
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "sourceMap": false,
          "namedChunks": true,
          "extractLicenses": true,
          "vendorChunk": true,
          "minify": true
        }
      }
    },
    "graphql-codegen": {
      "executor": "nx:run-script",
      "options": {
        "script": "generate"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/firmhouse-sdk/jest.config.ts",
        "passWithNoTests": true,
        "codeCoverage": true,
        "coverageReporters": ["text", "lcov"]
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "release": {
      "executor": "nx:run-commands",
      "outputs": [],
      "dependsOn": ["api-extractor"],
      "options": {
        "command": "npx semantic-release-plus --extends ./packages/firmhouse-sdk/release.config.js",
        "parallel": false
      }
    },
    "api-extractor": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "dependsOn": ["build"],
      "options": {
        "command": "npx api-extractor run --local --diagnostics -c ./packages/firmhouse-sdk/api-extractor.json"
      }
    }
  }
}
